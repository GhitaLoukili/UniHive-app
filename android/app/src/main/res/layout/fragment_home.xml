<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.FragmentHome">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/action_bar_logo"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logov1_rounded" />

        <TextView
            android:id="@+id/action_bar_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/ic_home"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            />

        <ImageButton
            android:id="@+id/action_bar_home_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null" />

    </androidx.appcompat.widget.Toolbar>

    <ImageSwitcher
        android:id="@+id/image_switcher"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="60dp" />

    <ImageButton
        android:id="@+id/previous_button_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/navigate_before"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/next_button_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_gravity="end"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/navigate_next"
        android:contentDescription="@null"/>

</FrameLayout>