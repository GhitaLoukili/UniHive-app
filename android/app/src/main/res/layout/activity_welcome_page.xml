<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/welcome_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_gradient_bg_rectangle">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="336dp"
            android:layout_height="158dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="31dp"
            android:contentDescription="@null"
            app:layout_constraintHorizontal_bias="0.493"
            app:srcCompat="@drawable/logov1_rounded" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_below="@+id/app_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/poppins_medium"
            android:onClick="onLoginBtnClick"
            android:text="@string/login_button"
            android:textColor="@color/picton_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/app_logo"
            app:layout_constraintStart_toStartOf="@+id/app_logo"
            app:layout_constraintTop_toBottomOf="@+id/app_logo" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_login"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/picton_blue"
            android:fontFamily="@font/poppins_medium"
            android:onClick="onCreateAccountBtnClick"
            android:text="@string/create_account_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/button_login"
            app:layout_constraintStart_toStartOf="@+id/button_login"
            app:layout_constraintTop_toBottomOf="@+id/button_login" />
    </RelativeLayout>
