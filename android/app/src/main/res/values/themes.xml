<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Unihiveandroid" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/picton_blue</item>
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/picton_blue</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.Unihiveandroid.NoActionBar1">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/picton_blue</item>
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.Unihiveandroid.NoActionBar2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/picton_blue</item>
    </style>

    <style name="Theme.Unihiveandroid.NoActionBar3">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/picton_blue</item>
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/picton_blue</item>
    </style>

    <style name="Theme.UniHiveandroid" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Unihiveandroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Unihiveandroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationTextActiveStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/picton_blue</item>
    </style>

    <style name="BottomNavigationTextInactiveStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationItemBackgroundStyle" parent="">
        <item name="itemBackground">@drawable/bottom_navigation_bar_item_background</item>
        <item name="itemIconTint">@drawable/bottom_navigation_bar_icon_color</item>
    </style>

    <style name="Theme.Unihiveandroid.TextButtonColor" parent="">
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="ShapeAppearanceRoundedCorners" parent="ShapeAppearance.M3.Sys.Shape.Corner.Small">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">5dp</item>
    </style>

</resources>